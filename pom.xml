				</executions>
			</plugin>
		</plugins>
	</build>
	
	<repositories>
        <repository>
            <id>spring-releases</id>
            <name>Spring Releases</name>
            <url>https://repo.spring.io/libs-release</url>
        </repository>
        <repository>
            <id>org.jboss.repository.releases</id>
            <name>JBoss Maven Release Repository</name>
            <url>https://repository.jboss.org/nexus/content/repositories/releases</url>
        </repository>
    </repositories>
	<distributionManagement>
		<site>
			<id>Pearson-Nexus-Site</id>
			<url>https://devops-tools.pearson.com/nexus-deps/content/sites/site</url>
		</site>
		<repository>
			<id>Pearson-Nexus-Releases</id>
			<name>Pearson-Nexus-Releases</name>
			<url>https://devops-tools.pearson.com/nexus-master/content/repositories/releases</url>
		</repository>
		<snapshotRepository>
			<id>Pearson-Nexus-Snapshots</id>
			<name>Pearson-Nexus-Snapshots</name>
			<url>https://devops-tools.pearson.com/nexus-deps/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>
    <pluginRepositories>
        <pluginRepository>
            <id>spring-releases</id>
            <name>Spring Releases</name>
            <url>https://repo.spring.io/libs-release</url>
        </pluginRepository>
    </pluginRepositories>

</project>
