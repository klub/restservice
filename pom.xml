									<src>${project.build.directory}/${project.artifactId}-${project.version}.jar</src>
									<type>file</type>
									<dst>/home/appuser/${project.artifactId}/${project.artifactId}.jar</dst>
									<mapper>
										<type>perm</type>
										<user>appuser</user>
										<group>appuser</group>
									</mapper>
								</data>
								<data>
									<type>template</type>
									<paths>
										<path>/var/log/${project.artifactId}</path>
									</paths>
									<mapper>
										<type>perm</type>
										<user>appuser</user>
										<group>appuser</group>
									</mapper>
								</data>
